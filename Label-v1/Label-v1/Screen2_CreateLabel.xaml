            <Setter Property="Margin" Value="0,0,25,0" />
            <Setter Property="Value" Value="20"/>
            <Setter Property="StepFrequency" Value="1"/>
            <Setter Property="Minimum" Value="1"/>
            <Setter Property="Maximum" Value="40"/>
